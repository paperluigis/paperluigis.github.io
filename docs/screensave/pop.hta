<html>
	<head>
		<title>Annoying Title That Sits On Top</title>
		<meta http-equiv="Refresh" content="5">
	</head>
	<body style="margin: 0px; color: white; background: transparent">
		<HTA:APPLICATION
			APPLICATIONNAME = "Wheee! Cannot catch me."
			INNERBORDER = "no"
			BORDER = "none"
			SHOWINTASKBAR = "yes"
		    SCROLL = "no"
			MINIMIZEBUTTON = "no"
			MAXIMIZEBUTTON = "no"
		/>
		<script src="pop.js"></script>
		<script async>
			var speed = 60;
			var constRand1 = Math.random() * 500;
			var constRand2 = Math.random() * 500;
			var a = 215; 
			var b = 0;
			var shakeX = 16;
			var shakeY = 9;
			function bounce() {
				window.moveTo(constRand1 + Math.random() * shakeX, constRand2 + Math.random() * shakeY);
				window.resizeTo(20, 20);
				window.focus();
				shakeX *= 1.001;
				shakeY *= 1.001;
			};
			setInterval(bounce, 1000 / speed);
		</script>
	</body>
</html>